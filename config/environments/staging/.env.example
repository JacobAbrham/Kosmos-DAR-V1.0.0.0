# KOSMOS Staging Environment Configuration
# Copy this file to .env and customize for staging

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgresql://kosmos:CHANGEME@postgres-staging:5432/kosmos_staging
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL=redis://redis-staging:6379/0
REDIS_MAX_CONNECTIONS=100

# ============================================================================
# Object Storage (MinIO)
# ============================================================================
MINIO_ENDPOINT=minio-staging:9000
MINIO_ACCESS_KEY=CHANGEME
MINIO_SECRET_KEY=CHANGEME
MINIO_BUCKET=kosmos-staging
MINIO_USE_SSL=true

# ============================================================================
# Authentication
# ============================================================================
AUTH_PROVIDER=zitadel
ZITADEL_URL=https://zitadel-staging.internal
ZITADEL_CLIENT_ID=kosmos-staging
ZITADEL_CLIENT_SECRET=CHANGEME
JWT_SECRET=CHANGEME_SECURE_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# LLM Configuration
# ============================================================================
OPENAI_API_KEY=CHANGEME
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# ============================================================================
# Observability
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://signoz-staging:4317
LANGFUSE_PUBLIC_KEY=CHANGEME
LANGFUSE_SECRET_KEY=CHANGEME
LANGFUSE_HOST=https://langfuse-staging.internal

# ============================================================================
# Application
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=https://staging.kosmos.internal
CORS_ORIGINS=https://staging.kosmos.internal
