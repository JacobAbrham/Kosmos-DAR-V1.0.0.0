# KOSMOS Production Environment Configuration
# Copy this file to .env and customize for production
# ⚠️ NEVER commit the actual .env file with real credentials

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgresql://kosmos:CHANGEME@postgres-prod:5432/kosmos_prod
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=100

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL=redis://redis-prod:6379/0
REDIS_MAX_CONNECTIONS=200

# ============================================================================
# Object Storage (MinIO)
# ============================================================================
MINIO_ENDPOINT=minio-prod:9000
MINIO_ACCESS_KEY=CHANGEME
MINIO_SECRET_KEY=CHANGEME
MINIO_BUCKET=kosmos-production
MINIO_USE_SSL=true

# ============================================================================
# Authentication
# ============================================================================
AUTH_PROVIDER=zitadel
ZITADEL_URL=https://zitadel.kosmos.nuvanta.cloud
ZITADEL_CLIENT_ID=kosmos-production
ZITADEL_CLIENT_SECRET=CHANGEME_USE_SECRETS_MANAGER
JWT_SECRET=CHANGEME_USE_SECRETS_MANAGER
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# LLM Configuration
# ============================================================================
OPENAI_API_KEY=CHANGEME_USE_SECRETS_MANAGER
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# ============================================================================
# Observability
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://signoz-prod:4317
LANGFUSE_PUBLIC_KEY=CHANGEME
LANGFUSE_SECRET_KEY=CHANGEME
LANGFUSE_HOST=https://langfuse.kosmos.nuvanta.cloud

# ============================================================================
# Application
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=https://kosmos.nuvanta.cloud
CORS_ORIGINS=https://kosmos.nuvanta.cloud

# ============================================================================
# Security
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=strict
