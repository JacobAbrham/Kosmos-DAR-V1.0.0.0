<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KOSMOS Setup Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .header {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
            text-align: center;
        }
        
        .header h1 {
            color: #333;
            font-size: 2.5em;
            margin-bottom: 10px;
        }
        
        .header p {
            color: #666;
            font-size: 1.1em;
        }
        
        .environments {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .env-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            border: 3px solid transparent;
        }
        
        .env-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
        }
        
        .env-card.selected {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
        }
        
        .env-icon {
            font-size: 3em;
            margin-bottom: 15px;
        }
        
        .env-name {
            font-size: 1.5em;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        
        .env-description {
            color: #666;
            margin-bottom: 15px;
            line-height: 1.6;
        }
        
        .env-meta {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }
        
        .env-badge {
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.85em;
            font-weight: bold;
        }
        
        .badge-beginner {
            background: #28a745;
            color: white;
        }
        
        .badge-intermediate {
            background: #ffc107;
            color: #333;
        }
        
        .badge-advanced {
            background: #dc3545;
            color: white;
        }
        
        .details-panel {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            display: none;
            margin-bottom: 30px;
        }
        
        .details-panel.active {
            display: block;
        }
        
        .details-panel h2 {
            color: #333;
            margin-bottom: 20px;
        }
        
        .details-list {
            list-style: none;
            padding: 0;
        }
        
        .details-list li {
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }
        
        .details-list li:last-child {
            border-bottom: none;
        }
        
        .details-list strong {
            color: #667eea;
            margin-right: 10px;
        }
        
        .action-panel {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
            text-align: center;
        }
        
        .btn {
            padding: 15px 40px;
            font-size: 1.2em;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .btn-primary {
            background: #667eea;
            color: white;
        }
        
        .btn-primary:hover:not(:disabled) {
            background: #5568d3;
            transform: scale(1.05);
        }
        
        .btn-primary:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        
        .output-panel {
            background: #1e1e1e;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            display: none;
        }
        
        .output-panel.active {
            display: block;
        }
        
        .output-panel h3 {
            color: white;
            margin-bottom: 15px;
        }
        
        #output-log {
            background: #1e1e1e;
            color: #d4d4d4;
            font-family: 'Consolas', 'Monaco', monospace;
            font-size: 0.9em;
            height: 400px;
            overflow-y: auto;
            padding: 15px;
            border-radius: 5px;
            line-height: 1.6;
            white-space: pre-wrap;
        }
        
        .status-bar {
            background: white;
            padding: 15px 30px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-top: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .status-indicator {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #28a745;
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        
        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
            display: none;
        }
        
        .spinner.active {
            display: inline-block;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            overflow-y: auto;
        }
        
        .modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .modal-content {
            background: white;
            border-radius: 10px;
            padding: 30px;
            max-width: 800px;
            width: 100%;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 20px 60px rgba(0,0,0,0.4);
        }
        
        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #667eea;
        }
        
        .modal-header h2 {
            color: #333;
            margin: 0;
        }
        
        .close-modal {
            font-size: 2em;
            color: #999;
            cursor: pointer;
            background: none;
            border: none;
            padding: 0;
            width: 30px;
            height: 30px;
            line-height: 30px;
        }
        
        .close-modal:hover {
            color: #333;
        }
        
        .env-var-group {
            margin-bottom: 20px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 5px;
        }
        
        .env-var-label {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 5px;
        }
        
        .env-var-label strong {
            color: #333;
            font-size: 1em;
        }
        
        .required-badge {
            background: #dc3545;
            color: white;
            padding: 2px 8px;
            border-radius: 3px;
            font-size: 0.75em;
            font-weight: bold;
        }
        
        .optional-badge {
            background: #6c757d;
            color: white;
            padding: 2px 8px;
            border-radius: 3px;
            font-size: 0.75em;
        }
        
        .env-var-description {
            color: #666;
            font-size: 0.9em;
            margin-bottom: 8px;
        }
        
        .env-var-input {
            width: 100%;
            padding: 10px;
            border: 2px solid #ddd;
            border-radius: 5px;
            font-size: 1em;
            font-family: 'Consolas', monospace;
        }
        
        .env-var-input:focus {
            outline: none;
            border-color: #667eea;
        }
        
        .modal-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }
        
        .btn-secondary {
            background: #6c757d;
            color: white;
        }
        
        .btn-secondary:hover:not(:disabled) {
            background: #5a6268;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üöÄ KOSMOS Development Environment Setup</h1>
            <p>Choose your preferred development environment and let us handle the rest</p>
        </div>
        
        <div class="environments" id="environments">
            <!-- Environment cards will be loaded here -->
        </div>
        
        <div class="details-panel" id="details-panel">
            <h2>Selected Environment Details</h2>
            <ul class="details-list" id="details-list">
                <!-- Details will be loaded here -->
            </ul>
        </div>
        
        <div class="action-panel">
            <button class="btn btn-primary" id="start-btn" disabled>
                ‚ñ∂ Start Setup
            </button>
            <div class="spinner" id="spinner"></div>
        </div>
        
        <div class="output-panel" id="output-panel">
            <h3>Setup Progress</h3>
            <div id="output-log"></div>
        </div>
        
        <div class="status-bar">
            <div class="status-indicator">
                <div class="status-dot" id="status-dot"></div>
                <span id="status-text">Ready</span>
            </div>
            <div id="progress-text"></div>
        </div>
    </div>
    
    <!-- Environment Variables Modal -->
    <div class="modal" id="env-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>‚öôÔ∏è Environment Configuration</h2>
                <button class="close-modal" onclick="closeEnvModal()">&times;</button>
            </div>
            <p style="color: #666; margin-bottom: 20px;">
                Configure your environment variables. Required fields are marked with a red badge. 
                Leave optional fields blank if not needed.
            </p>
            <div id="env-vars-container">
                <!-- Environment variables will be loaded here -->
            </div>
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="loadExistingEnv()">
                    üìÇ Load Existing
                </button>
                <button class="btn btn-primary" onclick="saveAndContinue()">
                    üíæ Save & Continue
                </button>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
        let selectedEnvironment = null;
        let socket = null;
        
        // Load environments
        async function loadEnvironments() {
            const response = await fetch('/api/environments');
            const environments = await response.json();
            
            const container = document.getElementById('environments');
            container.innerHTML = '';
            
            environments.forEach(env => {
                const card = createEnvironmentCard(env);
                container.appendChild(card);
            });
        }
        
        function createEnvironmentCard(env) {
            const card = document.createElement('div');
            card.className = 'env-card';
            card.dataset.envId = env.id;
            
            const skillClass = env.skill_level.toLowerCase().replace(' ', '-');
            
            card.innerHTML = `
                <div class="env-icon">${env.icon}</div>
                <div class="env-name">${env.name}</div>
                <div class="env-description">${env.description}</div>
                <div class="env-meta">
                    <span class="env-badge badge-${skillClass}">${env.skill_level}</span>
                    <span>${env.setup_time}</span>
                </div>
            `;
            
            card.addEventListener('click', () => selectEnvironment(env, card));
            
            return card;
        }
        
        function selectEnvironment(env, card) {
            // Remove previous selection
            document.querySelectorAll('.env-card').forEach(c => c.classList.remove('selected'));
            
            // Select new environment
            card.classList.add('selected');
            selectedEnvironment = env;
            
            // Show details
            showDetails(env);
            
            // Enable start button
            document.getElementById('start-btn').disabled = false;
        }
        
        function showDetails(env) {
            const panel = document.getElementById('details-panel');
            const list = document.getElementById('details-list');
            
            list.innerHTML = `
                <li><strong>Best For:</strong> ${env.best_for}</li>
                <li><strong>Requirements:</strong> ${env.requirements.join(', ')}</li>
                <li><strong>Cost:</strong> ${env.cost}</li>
                <li><strong>Skill Level:</strong> ${env.skill_level}</li>
                <li><strong>Setup Time:</strong> ${env.setup_time}</li>
            `;
            
            panel.classList.add('active');
        }
        
        async function startSetup() {
            if (!selectedEnvironment) return;
            
            // Confirm
            if (!confirm(`Start setup for ${selectedEnvironment.name}?\\n\\nThis may take ${selectedEnvironment.setup_time}.`)) {
                return;
            }
            
            // Update UI
            document.getElementById('start-btn').disabled = true;
            document.getElementById('spinner').classList.add('active');
            document.getElementById('output-panel').classList.add('active');
            updateStatus('running', 'Setup running...');
            
            // Start setup
            const response = await fetch('/api/start-setup', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({environment_id: selectedEnvironment.id})
            });
            
            const data = await response.json();
            
            if (!socket) {
                initializeSocket();
            }
        }
        
        function initializeSocket() {
            socket = io();
            
            socket.on('setup_output', (data) => {
                appendOutput(data.output);
            });
            
            socket.on('setup_completed', (data) => {
                document.getElementById('spinner').classList.remove('active');
                if (data.success) {
                    updateStatus('success', 'Setup completed successfully!');
                    appendOutput('\\n‚úÖ Setup completed successfully!');
                } else {
                    updateStatus('error', 'Setup failed');
                    appendOutput('\\n‚ùå Setup failed: ' + data.error);
                }
                document.getElementById('start-btn').disabled = false;
            });
            
            socket.on('setup_error', (data) => {
                document.getElementById('spinner').classList.remove('active');
                updateStatus('error', 'Setup error');
                appendOutput('\\n‚ùå Error: ' + data.error);
                document.getElementById('start-btn').disabled = false;
            });
        }
        
        function appendOutput(text) {
            const log = document.getElementById('output-log');
            log.textContent += text + '\\n';
            log.scrollTop = log.scrollHeight;
        }
        
        function updateStatus(status, text) {
            const statusDot = document.getElementById('status-dot');
            const statusText = document.getElementById('status-text');
            
            statusText.textContent = text;
            
            if (status === 'running') {
                statusDot.style.background = '#ffc107';
            } else if (status === 'success') {
                statusDot.style.background = '#28a745';
            } else if (status === 'error') {
                statusDot.style.background = '#dc3545';
            }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            loadEnvironments();
            document.getElementById('start-btn').addEventListener('click', startSetup);
        });
    </script>
</body>
</html>
