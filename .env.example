# KOSMOS Development Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgresql://kosmos:kosmos_dev_password@localhost:5432/kosmos_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# Object Storage (MinIO)
# ============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=kosmos-dev
MINIO_USE_SSL=false

# ============================================================================
# Authentication
# ============================================================================
AUTH_PROVIDER=mock
ZITADEL_URL=http://localhost:8080
ZITADEL_CLIENT_ID=kosmos-dev
ZITADEL_CLIENT_SECRET=dev_secret_change_me
JWT_SECRET=dev_jwt_secret_change_me_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# LLM Configuration
# ============================================================================
# OpenAI
OPENAI_API_KEY=sk-dev-your-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic (optional)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Local Ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LiteLLM Proxy
LITELLM_URL=http://localhost:4000
LITELLM_API_KEY=dev-key

# ============================================================================
# Observability
# ============================================================================
# SigNoz
SIGNOZ_ENDPOINT=http://localhost:4317
SIGNOZ_ENABLED=true

# Langfuse
LANGFUSE_PUBLIC_KEY=pk-dev-key
LANGFUSE_SECRET_KEY=sk-dev-secret
LANGFUSE_HOST=http://localhost:3000

# Prometheus
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# ============================================================================
# Message Queue (NATS)
# ============================================================================
NATS_URL=nats://localhost:4222
NATS_STREAM=kosmos-events

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_RATE_LIMIT=100/minute
ENABLE_DEP_CHECKS=false

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# MCP Servers
# ============================================================================
MCP_SEQUENTIAL_THINKING_ENABLED=true
MCP_MEMORY_ENABLED=true
MCP_CONTEXT7_ENABLED=false

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300
AGENT_DEBUG=true

# ============================================================================
# Development Tools
# ============================================================================
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false

# ============================================================================
# Secrets Management (for production, use Infisical)
# ============================================================================
INFISICAL_TOKEN=
INFISICAL_PROJECT_ID=
