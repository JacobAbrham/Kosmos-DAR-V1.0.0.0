# KOSMOS Development Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgresql://kosmos:YOUR_PASSWORD@postgres:5432/kosmos_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# Object Storage (MinIO)
# ============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=YOUR_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=YOUR_MINIO_SECRET_KEY
MINIO_BUCKET=kosmos-dev
MINIO_USE_SSL=false

# ============================================================================
# Authentication
# ============================================================================
AUTH_PROVIDER=mock
ZITADEL_URL=http://localhost:8080
ZITADEL_CLIENT_ID=kosmos-dev
ZITADEL_CLIENT_SECRET=YOUR_ZITADEL_SECRET
JWT_SECRET=YOUR_JWT_SECRET_CHANGE_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# LLM Configuration
# ============================================================================
# OpenAI
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic (optional)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY

# Local Ollama
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# LiteLLM Proxy
LITELLM_URL=http://litellm:4000

# ============================================================================
# Observability
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_DEP_CHECKS=true
ENABLE_PENTARCHY=true
ENABLE_TELEMETRY=true

# ============================================================================
# Agent Configuration
# ============================================================================
ZEUS_MAX_CONCURRENT_TASKS=10
AGENT_TIMEOUT_SECONDS=30
